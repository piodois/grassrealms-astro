---
// @version 3.0.0
// SEO-optimized layout for GrassRealms - All Hispanic countries
interface Props {
  title?: string;
  description?: string;
}

const siteUrl = import.meta.env.PUBLIC_SITE_URL || "https://grassrealms.com";
const mcVersion = import.meta.env.PUBLIC_MC_VERSION || "1.21.11";
const discordInvite = import.meta.env.PUBLIC_DISCORD_INVITE || "https://discord.gg/KdcrCBjM";

const {
  title = "GrassRealms | Servidor Minecraft Vanilla en Espanol - Latinoamerica y Espana",
  description = `El mejor servidor Minecraft Vanilla en espanol ${mcVersion}. Comunidad activa de Chile, Argentina, Mexico, Peru, Colombia, Espana y toda Latinoamerica. Paper optimizado, anti-xray, sin lag, sin pay-to-win. Unete gratis!`
} = Astro.props;

const keywords = [
  // General
  "minecraft en espanol",
  "servidor minecraft espanol",
  "minecraft vanilla espanol",
  "servidor minecraft gratis",
  "minecraft survival espanol",
  "grassrealms",
  "servidor minecraft latino",
  "minecraft hispanohablante",
  "minecraft latam",
  // Argentina
  "minecraft argentina",
  "servidor minecraft argentina",
  // Chile
  "minecraft chile",
  "servidor minecraft chile",
  // Mexico
  "minecraft mexico",
  "servidor minecraft mexico",
  // Peru
  "minecraft peru",
  "servidor minecraft peru",
  // Colombia
  "minecraft colombia",
  "servidor minecraft colombia",
  // Espana
  "minecraft espana",
  "servidor minecraft espana",
  // Venezuela
  "minecraft venezuela",
  "servidor minecraft venezuela",
  // Ecuador
  "minecraft ecuador",
  "servidor minecraft ecuador",
  // Bolivia
  "minecraft bolivia",
  "servidor minecraft bolivia",
  // Uruguay
  "minecraft uruguay",
  "servidor minecraft uruguay",
  // Paraguay
  "minecraft paraguay",
  // Costa Rica
  "minecraft costa rica",
  // Honduras
  "minecraft honduras",
  // Guatemala
  "minecraft guatemala",
  // Panama
  "minecraft panama",
  // Technical
  "minecraft paper server",
  "minecraft 1.21",
  "servidor minecraft vanilla",
  "minecraft survival",
  "minecraft sin lag"
].join(", ");

const structuredData = {
  "@context": "https://schema.org",
  "@type": "VideoGame",
  "name": "GrassRealms Minecraft Server",
  "description": "El mejor servidor Minecraft Vanilla en espanol para toda Latinoamerica y Espana. Comunidad activa 24/7.",
  "url": siteUrl,
  "gamePlatform": "Minecraft Java Edition",
  "applicationCategory": "Game Server",
  "operatingSystem": `Minecraft ${mcVersion}`,
  "inLanguage": "es",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "ratingCount": "500",
    "bestRating": "5",
    "worstRating": "1"
  },
  "provider": {
    "@type": "Organization",
    "name": "GrassRealms",
    "url": siteUrl,
    "logo": `${siteUrl}/logo.svg`,
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "customer support",
      "url": discordInvite,
      "availableLanguage": "Spanish"
    }
  }
};
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="GrassRealms" />
    <meta name="publisher" content="GrassRealms" />
    <meta name="category" content="gaming" />

    <!-- Robots -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />

    <!-- Language and Region Tags -->
    <meta name="language" content="Spanish" />
    <meta name="geo.region" content="419" />
    <meta name="geo.placename" content="Latin America" />
    <meta name="revisit-after" content="3 days" />
    <meta name="target" content="all" />
    <meta name="audience" content="all" />
    <meta name="coverage" content="Worldwide" />
    <meta name="distribution" content="Global" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content="GrassRealms | Servidor Minecraft en Espanol" />
    <meta property="og:description" content="El servidor Minecraft Vanilla para toda Latinoamerica y Espana. Comunidad activa, sin lag, sin pay-to-win. Unete gratis!" />
    <meta property="og:image" content={`${siteUrl}/logo.png`} />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    <meta property="og:image:alt" content="GrassRealms - Servidor Minecraft en Espanol" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:locale:alternate" content="es_AR" />
    <meta property="og:locale:alternate" content="es_MX" />
    <meta property="og:locale:alternate" content="es_CL" />
    <meta property="og:locale:alternate" content="es_CO" />
    <meta property="og:locale:alternate" content="es_PE" />
    <meta property="og:site_name" content="GrassRealms" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={siteUrl} />
    <meta name="twitter:title" content="GrassRealms | Servidor Minecraft en Espanol" />
    <meta name="twitter:description" content="El servidor Minecraft Vanilla para toda Latinoamerica. Comunidad activa, sin lag. Unete!" />
    <meta name="twitter:image" content={`${siteUrl}/logo.png`} />

    <!-- Canonical -->
    <link rel="canonical" href={siteUrl} />

    <!-- Hreflang for Spanish speaking regions -->
    <link rel="alternate" hreflang="es" href={siteUrl} />
    <link rel="alternate" hreflang="es-419" href={siteUrl} />
    <link rel="alternate" hreflang="x-default" href={siteUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" sizes="48x48" />
    <link rel="apple-touch-icon" href="/logo.png" sizes="180x180" />
    <link rel="shortcut icon" href="/favicon.png" />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://api.mcsrvstat.us" />
    <link rel="dns-prefetch" href="https://api.mcsrvstat.us" />

    <!-- Theme color -->
    <meta name="theme-color" content="#FFB7C5" />
    <meta name="msapplication-TileColor" content="#0d0d0d" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  </head>
  <body class="bg-obsidian text-white min-h-screen antialiased">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

---
// @version 1.0.0
// Server information section with game modes and tips
const mcVersion = import.meta.env.PUBLIC_MC_VERSION || "1.21.4";

const serverFeatures = [
  {
    title: "Mundo Persistente",
    description: "El mundo no se reinicia. Construye tu legado, explora cada rincon. Tu historia permanece para siempre.",
    icon: "world"
  },
  {
    title: "Sin Pay-to-Win",
    description: "Todos empiezan igual. Sin ventajas compradas. Tu habilidad y dedicacion es lo unico que importa.",
    icon: "balance"
  },
  {
    title: "100% Survival",
    description: "Experiencia survival pura. Recolecta recursos, construye, explora y sobrevive como Minecraft fue disenado.",
    icon: "pickaxe"
  },
  {
    title: "Dificultad Hard",
    description: "Desafio real para jugadores experimentados. Mobs agresivos, hambre realista y combate intenso.",
    icon: "skull"
  }
];

const tips = [
  "Explora cuevas profundas para encontrar diamantes y ancient debris",
  "Construye lejos del spawn para mayor privacidad",
  "Unete a Discord para formar alianzas y conseguir ayuda",
  "Respeta las construcciones de otros jugadores"
];
---

<section id="server" class="snap-section py-20 relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 z-0">
    <img
      src="/background-server.svg"
      alt=""
      class="w-full h-full object-cover opacity-10"
    />
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="font-minecraft text-3xl sm:text-4xl mb-4">
        <span class="bg-gradient-to-r from-emerald-glow to-diamond-blue bg-clip-text text-transparent">
          El Servidor
        </span>
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Experiencia vanilla autentica con las mejoras de rendimiento que necesitas
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left: 3D Cube and Features -->
      <div>
        <!-- 3D Minecraft Cube -->
        <div class="flex justify-center mb-12">
          <div class="perspective-[1000px]">
            <div class="w-32 h-32 relative animate-rotate-cube" style="transform-style: preserve-3d;">
              <!-- Front face (grass) -->
              <div class="absolute w-32 h-32 bg-gradient-to-b from-[#5D8C3B] to-[#4A7030] border-2 border-[#3D5C28]" style="transform: translateZ(64px);">
                <div class="absolute bottom-0 left-0 right-0 h-1/2 bg-[#8B5A2B]"></div>
              </div>
              <!-- Back face -->
              <div class="absolute w-32 h-32 bg-[#8B5A2B] border-2 border-[#6B4423]" style="transform: translateZ(-64px) rotateY(180deg);"></div>
              <!-- Right face -->
              <div class="absolute w-32 h-32 bg-gradient-to-b from-[#4A7030] to-[#8B5A2B] border-2 border-[#3D5C28]" style="transform: rotateY(90deg) translateZ(64px);"></div>
              <!-- Left face -->
              <div class="absolute w-32 h-32 bg-gradient-to-b from-[#4A7030] to-[#8B5A2B] border-2 border-[#3D5C28]" style="transform: rotateY(-90deg) translateZ(64px);"></div>
              <!-- Top face (grass) -->
              <div class="absolute w-32 h-32 bg-[#5D8C3B] border-2 border-[#4A7030]" style="transform: rotateX(90deg) translateZ(64px);">
                <div class="w-full h-full" style="background: repeating-linear-gradient(45deg, #5D8C3B 0px, #5D8C3B 8px, #4A7030 8px, #4A7030 16px);"></div>
              </div>
              <!-- Bottom face (dirt) -->
              <div class="absolute w-32 h-32 bg-[#6B4423] border-2 border-[#5A3A1D]" style="transform: rotateX(-90deg) translateZ(64px);"></div>
            </div>
          </div>
        </div>

        <!-- Server Features -->
        <div class="grid sm:grid-cols-2 gap-4">
          {serverFeatures.map((feature) => (
            <div class="p-4 bg-stone/50 rounded-xl border border-cobblestone">
              <div class="flex items-start gap-3">
                <div class="w-8 h-8 rounded-lg bg-emerald-glow/20 flex items-center justify-center flex-shrink-0">
                  {feature.icon === "world" && (
                    <svg class="w-4 h-4 text-emerald-glow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  {feature.icon === "balance" && (
                    <svg class="w-4 h-4 text-emerald-glow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                    </svg>
                  )}
                  {feature.icon === "pickaxe" && (
                    <svg class="w-4 h-4 text-emerald-glow" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M14.79 10.62L3.5 21.9l-.71-.71 11.28-11.28c-.91-1.34-.64-3.17.64-4.45l1.42-1.42 4.24 4.24-1.42 1.42c-1.28 1.28-3.11 1.55-4.45.64l-.71.71z"/>
                    </svg>
                  )}
                  {feature.icon === "skull" && (
                    <svg class="w-4 h-4 text-emerald-glow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                    </svg>
                  )}
                </div>
                <div>
                  <h4 class="font-semibold text-white text-sm">{feature.title}</h4>
                  <p class="text-gray-400 text-xs mt-1">{feature.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Right: Tips -->
      <div class="bg-stone rounded-2xl border border-cobblestone p-8">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 rounded-xl bg-gold-yellow/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-gold-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white">Tips para Nuevos Jugadores</h3>
        </div>

        <ul class="space-y-4">
          {tips.map((tip, index) => (
            <li class="flex items-start gap-3">
              <span class="w-6 h-6 rounded-full bg-emerald-glow/20 text-emerald-glow text-sm flex items-center justify-center flex-shrink-0">
                {index + 1}
              </span>
              <span class="text-gray-300">{tip}</span>
            </li>
          ))}
        </ul>

        <div class="mt-8 pt-6 border-t border-cobblestone">
          <p class="text-sm text-gray-500">
            Version: <span class="text-emerald-glow">{mcVersion}</span> - Paper optimizado
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

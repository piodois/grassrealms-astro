---
// @version 1.0.0
// Partners carousel showing infrastructure partners
const partners = [
  { name: "Paper", logo: "/partners/paper.svg" },
  { name: "Contabo", logo: "/partners/contabo.svg" },
  { name: "Ubuntu", logo: "/partners/ubuntu.svg" },
  { name: "Cloudflare", logo: "/partners/cloudflare.svg" },
  { name: "TCP Shield", logo: "/partners/tcpshield.svg" },
];
---

<section class="py-12 bg-stone/50 border-y border-cobblestone">
  <div class="max-w-7xl mx-auto px-4">
    <p class="text-center text-gray-500 text-sm mb-6 uppercase tracking-wider">
      Infraestructura Empresarial
    </p>

    <!-- Carousel container -->
    <div class="relative overflow-hidden">
      <!-- Gradient overlays -->
      <div class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-stone/50 to-transparent z-10"></div>
      <div class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-stone/50 to-transparent z-10"></div>

      <!-- Scrolling content -->
      <div class="flex animate-scroll-left">
        {/* First set */}
        {partners.map((partner) => (
          <div class="flex-shrink-0 mx-8">
            <img
              src={partner.logo}
              alt={partner.name}
              class="h-10 w-auto grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
            />
          </div>
        ))}
        {/* Duplicate for seamless loop */}
        {partners.map((partner) => (
          <div class="flex-shrink-0 mx-8">
            <img
              src={partner.logo}
              alt={partner.name}
              class="h-10 w-auto grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

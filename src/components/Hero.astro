---
// @version 1.0.0
// Hero section with server stats and copy IP functionality
const serverIp = import.meta.env.PUBLIC_SERVER_IP || "mc.grassrealms.com";
const mcVersion = import.meta.env.PUBLIC_MC_VERSION || "1.21.4";
const discordInvite = import.meta.env.PUBLIC_DISCORD_INVITE || "https://discord.gg/KdcrCBjM";
---

<section id="hero" class="snap-section relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 z-0">
    <img
      src="/background.jpg"
      alt="Minecraft landscape"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-obsidian/70 via-obsidian/50 to-obsidian"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
    <!-- Logo -->
    <div class="animate-float mb-6">
      <img
        src="/logo.svg"
        alt="GrassRealms Logo"
        class="w-28 h-28 mx-auto drop-shadow-2xl"
      />
    </div>

    <!-- Status Badge -->
    <div id="status-badge" class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass mb-6">
      <span id="status-dot" class="w-3 h-3 rounded-full bg-emerald-glow animate-pulse"></span>
      <span id="status-text" class="text-sm text-gray-300">Servidor Online - Minecraft {mcVersion}</span>
    </div>

    <!-- Title -->
    <h1 class="font-minecraft text-4xl sm:text-5xl md:text-6xl mb-4">
      <span class="bg-gradient-to-r from-emerald-glow via-diamond-blue to-emerald-glow bg-clip-text text-transparent animate-gradient">
        Vanilla Minecraft
      </span>
    </h1>

    <!-- Subtitle -->
    <p class="text-xl sm:text-2xl text-gray-300 mb-2">
      Experiencia Minecraft pura, como debe ser.
    </p>
    <p class="text-gray-400 mb-8 max-w-2xl mx-auto">
      Servidor optimizado con Paper para maximo rendimiento. Dificultad Hard.
      La experiencia vanilla mas fiel al juego original.
    </p>

    <!-- Server IP -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-8">
      <button
        id="copy-ip-btn"
        class="group flex items-center gap-3 px-6 py-3 bg-stone rounded-xl border border-cobblestone hover:border-emerald-glow transition-all"
      >
        <span class="font-mono text-lg text-emerald-glow">{serverIp}</span>
        <svg id="copy-icon" class="w-5 h-5 text-gray-400 group-hover:text-emerald-glow transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        <svg id="check-icon" class="w-5 h-5 text-emerald-glow hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </button>

      <a
        href={discordInvite}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 px-6 py-3 bg-[#5865F2] rounded-xl hover:bg-[#4752C4] transition-colors"
      >
        <img src="/discord.svg" alt="Discord" class="w-5 h-5" />
        <span>Unirse al Discord</span>
      </a>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-2xl mx-auto">
      <div class="glass rounded-xl p-4">
        <div id="players-count" class="text-2xl font-bold text-emerald-glow">0/100</div>
        <div class="text-sm text-gray-400">Jugadores</div>
      </div>
      <div class="glass rounded-xl p-4">
        <div class="text-2xl font-bold text-nether-red">Hard</div>
        <div class="text-sm text-gray-400">Dificultad</div>
      </div>
      <div class="glass rounded-xl p-4">
        <div class="text-2xl font-bold text-diamond-blue">&lt;50ms</div>
        <div class="text-sm text-gray-400">Latencia</div>
      </div>
      <div class="glass rounded-xl p-4">
        <div class="text-2xl font-bold text-gold-yellow">Activo</div>
        <div class="text-sm text-gray-400">Anti-Xray</div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce-slow">
      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>
</section>

<script define:vars={{ serverIp }}>
  // Copy IP functionality
  const copyBtn = document.getElementById('copy-ip-btn');
  const copyIcon = document.getElementById('copy-icon');
  const checkIcon = document.getElementById('check-icon');

  copyBtn?.addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText(serverIp);
      copyIcon?.classList.add('hidden');
      checkIcon?.classList.remove('hidden');
      copyBtn?.classList.add('copy-success');

      setTimeout(() => {
        copyIcon?.classList.remove('hidden');
        checkIcon?.classList.add('hidden');
        copyBtn?.classList.remove('copy-success');
      }, 2000);
    } catch (err) {
      console.error('Failed to copy:', err);
    }
  });

  // Fetch server stats
  async function fetchServerStats() {
    try {
      const response = await fetch(`https://api.mcsrvstat.us/3/${serverIp}`);
      const data = await response.json();

      const playersEl = document.getElementById('players-count');
      const statusDot = document.getElementById('status-dot');
      const statusText = document.getElementById('status-text');

      if (data.online) {
        const online = data.players?.online || 0;
        const max = data.players?.max || 100;
        if (playersEl) playersEl.textContent = `${online}/${max}`;
        statusDot?.classList.remove('bg-nether-red');
        statusDot?.classList.add('bg-emerald-glow');
      } else {
        if (playersEl) playersEl.textContent = '0/100';
        if (statusText) statusText.textContent = 'Servidor Offline';
        statusDot?.classList.remove('bg-emerald-glow');
        statusDot?.classList.add('bg-nether-red');
      }
    } catch (err) {
      console.error('Failed to fetch server stats:', err);
    }
  }

  // Fetch stats on load and every 30 seconds
  fetchServerStats();
  setInterval(fetchServerStats, 30000);
</script>

---
// @version 3.0.0
// Cherry Blossom themed Hero section - Optimized for Latam
const serverIp = import.meta.env.PUBLIC_SERVER_IP || "mc.grassrealms.com";
const mcVersion = import.meta.env.PUBLIC_MC_VERSION || "1.21.11";
const discordInvite = import.meta.env.PUBLIC_DISCORD_INVITE || "https://discord.gg/KdcrCBjM";
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-obsidian">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img src="/background.jpg" alt="" class="w-full h-full object-cover" />
    <div class="absolute inset-0 bg-gradient-to-b from-obsidian/90 via-obsidian/70 to-obsidian"></div>
  </div>

  <!-- Cherry blossom petals decoration -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-3 h-3 bg-cherry-pink/30 rounded-full blur-sm animate-float"></div>
    <div class="absolute top-40 right-20 w-2 h-2 bg-cherry-petal/40 rounded-full blur-sm animate-float" style="animation-delay: 1s;"></div>
    <div class="absolute top-60 left-1/4 w-4 h-4 bg-cherry-pink/20 rounded-full blur-sm animate-float" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-40 right-1/3 w-2 h-2 bg-cherry-deep/30 rounded-full blur-sm animate-float" style="animation-delay: 0.5s;"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
    <!-- Logo -->
    <div class="mb-8">
      <img
        src="/logo.svg"
        alt="GrassRealms"
        class="w-24 h-24 mx-auto drop-shadow-2xl animate-float"
      />
    </div>

    <!-- Status indicator -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-cherry-pink/10 border border-cherry-pink/30 mb-8">
      <span id="status-dot" class="w-2 h-2 rounded-full bg-cherry-pink animate-pulse"></span>
      <span id="status-text" class="text-xs text-cherry-pink font-medium tracking-wide uppercase">Online</span>
      <span class="text-xs text-gray-600">|</span>
      <span id="players-count" class="text-xs text-gray-400">Cargando...</span>
    </div>

    <!-- Main headline -->
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-6 tracking-tight leading-tight">
      Tu Nuevo Hogar<br>
      <span class="bg-gradient-to-r from-cherry-pink via-cherry-deep to-cherry-pink bg-clip-text text-transparent">
        en Minecraft
      </span>
    </h1>

    <!-- Subtitle - Latam focused -->
    <p class="text-lg sm:text-xl text-gray-300 mb-4 max-w-xl mx-auto leading-relaxed">
      El servidor <span class="text-cherry-pink">100% en espa√±ol</span> que estabas buscando.
    </p>
    <p class="text-gray-500 mb-10 max-w-lg mx-auto">
      Vanilla puro. Sin lag. Sin pay-to-win. Comunidad latina activa las 24 horas.
    </p>

    <!-- Server IP - Main CTA -->
    <div class="mb-6">
      <button
        id="copy-ip-btn"
        class="group relative inline-flex items-center gap-4 px-8 py-4 bg-gradient-to-r from-cherry-pink to-cherry-deep text-white font-bold text-lg rounded-2xl hover:scale-105 transition-all duration-200 shadow-lg shadow-cherry-pink/25 hover:shadow-cherry-pink/40"
      >
        <span class="font-mono tracking-wide">{serverIp}</span>
        <svg id="copy-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        <svg id="check-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </button>
      <p id="copy-feedback" class="text-sm text-cherry-pink mt-3 opacity-0 transition-opacity">IP copiada al portapapeles</p>
    </div>

    <!-- Secondary actions -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
      <a
        href={discordInvite}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl border border-white/10 text-gray-300 hover:bg-white/5 hover:border-cherry-pink/30 transition-all"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
        </svg>
        <span>Unete al Discord</span>
      </a>
      <span class="text-gray-600 text-sm">+500 jugadores latinos</span>
    </div>

    <!-- Trust badges -->
    <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-gray-500">
      <div class="flex items-center gap-2">
        <div class="w-2 h-2 rounded-full bg-leaf-green"></div>
        <span>Java {mcVersion}</span>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-2 h-2 rounded-full bg-cherry-pink"></div>
        <span>Dificultad Hard</span>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-2 h-2 rounded-full bg-gold-yellow"></div>
        <span>100% Gratis</span>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
    <div class="w-6 h-10 rounded-full border-2 border-cherry-pink/30 flex justify-center pt-2">
      <div class="w-1 h-2 bg-cherry-pink/50 rounded-full animate-bounce"></div>
    </div>
  </div>
</section>

<script define:vars={{ serverIp }}>
  const copyBtn = document.getElementById('copy-ip-btn');
  const copyIcon = document.getElementById('copy-icon');
  const checkIcon = document.getElementById('check-icon');
  const feedback = document.getElementById('copy-feedback');

  copyBtn?.addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText(serverIp);
      copyIcon?.classList.add('hidden');
      checkIcon?.classList.remove('hidden');
      feedback?.classList.remove('opacity-0');

      setTimeout(() => {
        copyIcon?.classList.remove('hidden');
        checkIcon?.classList.add('hidden');
        feedback?.classList.add('opacity-0');
      }, 2000);
    } catch (err) {
      console.error('Failed to copy:', err);
    }
  });

  async function fetchServerStats() {
    try {
      const response = await fetch(`https://api.mcsrvstat.us/3/${serverIp}`);
      const data = await response.json();

      const playersEl = document.getElementById('players-count');
      const statusDot = document.getElementById('status-dot');
      const statusText = document.getElementById('status-text');

      if (data.online) {
        const online = data.players?.online || 0;
        if (playersEl) playersEl.textContent = `${online} jugando ahora`;
        if (statusText) statusText.textContent = 'Online';
        statusDot?.classList.remove('bg-nether-red');
        statusDot?.classList.add('bg-cherry-pink');
      } else {
        if (playersEl) playersEl.textContent = 'Servidor offline';
        if (statusText) statusText.textContent = 'Offline';
        statusDot?.classList.remove('bg-cherry-pink');
        statusDot?.classList.add('bg-nether-red');
      }
    } catch (err) {
      const playersEl = document.getElementById('players-count');
      if (playersEl) playersEl.textContent = 'Conectate ahora';
    }
  }

  fetchServerStats();
  setInterval(fetchServerStats, 30000);
</script>

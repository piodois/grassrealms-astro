---
// @version 3.0.0
// Cherry themed footer
const currentYear = new Date().getFullYear();
const discordInvite = import.meta.env.PUBLIC_DISCORD_INVITE || "https://discord.gg/KdcrCBjM";
---

<footer class="py-8 bg-stone/50 border-t border-cherry-pink/10">
  <div class="max-w-5xl mx-auto px-6">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <!-- Brand -->
      <div class="flex items-center gap-3">
        <img src="/logo.svg" alt="GrassRealms" class="w-8 h-8" />
        <span class="text-sm text-gray-400">GrassRealms</span>
      </div>

      <!-- Links -->
      <div class="flex items-center gap-6 text-sm text-gray-500">
        <a href={discordInvite} target="_blank" rel="noopener noreferrer" class="hover:text-cherry-pink transition-colors">Discord</a>
        <span class="text-gray-700">|</span>
        <span>&copy; {currentYear}</span>
      </div>
    </div>

    <!-- Countries -->
    <div class="mt-6 pt-6 border-t border-white/5 text-center">
      <p class="text-xs text-gray-600">
        Jugadores de Argentina, Chile, Mexico, Peru, Colombia, Venezuela, Ecuador, Bolivia, Uruguay, Espana, Costa Rica, Honduras, Guatemala, Panama y mas
      </p>
    </div>
  </div>
</footer>

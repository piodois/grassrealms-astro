---
// @version 2.0.0
// Minimalist footer
const currentYear = new Date().getFullYear();
const discordInvite = import.meta.env.PUBLIC_DISCORD_INVITE || "https://discord.gg/KdcrCBjM";
---

<footer class="py-8 bg-stone/50 border-t border-white/5">
  <div class="max-w-5xl mx-auto px-6">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <!-- Brand -->
      <div class="flex items-center gap-2">
        <div class="w-6 h-6 rounded bg-gradient-to-br from-emerald-glow to-emerald-600"></div>
        <span class="text-sm text-gray-400">GrassRealms</span>
      </div>

      <!-- Links -->
      <div class="flex items-center gap-6 text-sm text-gray-500">
        <a href={discordInvite} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">Discord</a>
        <span class="text-gray-700">|</span>
        <span>&copy; {currentYear}</span>
      </div>
    </div>
  </div>
</footer>

---
// @version 1.0.0
// Community section with Discord integration
const discordInvite = import.meta.env.PUBLIC_DISCORD_INVITE || "https://discord.gg/KdcrCBjM";

const communityFeatures = [
  {
    title: "Comunidad Activa",
    description: "Jugadores dedicados de habla hispana. Comparte estrategias, forma alianzas o compite por llegar al top.",
    icon: "users"
  },
  {
    title: "Staff Comprometido",
    description: "Moderadores activos que mantienen un ambiente limpio y justo para todos los jugadores.",
    icon: "shield"
  },
  {
    title: "Soporte 24/7",
    description: "Canal de ayuda en Discord para resolver dudas, reportar bugs o pedir asistencia cuando la necesites.",
    icon: "headset"
  }
];

const discordStats = [
  { label: "Miembros", value: "500+" },
  { label: "Canales", value: "15+" },
  { label: "Soporte", value: "24/7" }
];
---

<section id="community" class="snap-section py-20 bg-stone/30">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="font-minecraft text-3xl sm:text-4xl mb-4">
        <span class="bg-gradient-to-r from-emerald-glow to-diamond-blue bg-clip-text text-transparent">
          Nuestra Comunidad
        </span>
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Unete a una comunidad activa de jugadores apasionados por Minecraft vanilla
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Features -->
      <div class="space-y-6">
        {communityFeatures.map((feature) => (
          <div class="flex items-start gap-4 p-4 bg-obsidian/50 rounded-xl border border-cobblestone">
            <div class="w-12 h-12 rounded-xl bg-[#5865F2]/20 flex items-center justify-center flex-shrink-0">
              {feature.icon === "users" && (
                <svg class="w-6 h-6 text-[#5865F2]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
              )}
              {feature.icon === "shield" && (
                <svg class="w-6 h-6 text-[#5865F2]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
              {feature.icon === "headset" && (
                <svg class="w-6 h-6 text-[#5865F2]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              )}
            </div>
            <div>
              <h3 class="font-semibold text-white mb-1">{feature.title}</h3>
              <p class="text-gray-400 text-sm">{feature.description}</p>
            </div>
          </div>
        ))}
      </div>

      <!-- Right: Discord CTA -->
      <div class="bg-gradient-to-br from-[#5865F2] to-[#4752C4] rounded-2xl p-8 text-center">
        <div class="w-16 h-16 mx-auto mb-6 bg-white/10 rounded-2xl flex items-center justify-center">
          <img src="/discord.svg" alt="Discord" class="w-10 h-10" />
        </div>

        <h3 class="text-2xl font-bold text-white mb-3">Unete a nuestro Discord</h3>
        <p class="text-white/80 mb-6">
          Noticias del servidor, eventos especiales, y soporte directo de la comunidad
        </p>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-4 mb-8">
          {discordStats.map((stat) => (
            <div class="bg-white/10 rounded-xl p-3">
              <div class="text-xl font-bold text-white">{stat.value}</div>
              <div class="text-xs text-white/60">{stat.label}</div>
            </div>
          ))}
        </div>

        <a
          href={discordInvite}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-8 py-3 bg-white text-[#5865F2] font-semibold rounded-xl hover:bg-gray-100 transition-colors"
        >
          <img src="/discord.svg" alt="" class="w-5 h-5" style="filter: invert(32%) sepia(98%) saturate(1234%) hue-rotate(221deg) brightness(94%) contrast(93%);" />
          Unirse al Discord
        </a>
      </div>
    </div>
  </div>
</section>

---
// @version 2.0.0
// Minimalist final CTA section
const serverIp = import.meta.env.PUBLIC_SERVER_IP || "mc.grassrealms.com";
const discordInvite = import.meta.env.PUBLIC_DISCORD_INVITE || "https://discord.gg/KdcrCBjM";
---

<section class="py-24 bg-gradient-to-b from-obsidian to-stone/50">
  <div class="max-w-3xl mx-auto px-6 text-center">
    <!-- Headline -->
    <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
      Empieza tu aventura
    </h2>
    <p class="text-gray-400 mb-10">
      3 pasos. 30 segundos. Sin registro previo.
    </p>

    <!-- Steps -->
    <div class="grid md:grid-cols-3 gap-6 mb-12">
      <div class="p-6 rounded-xl bg-white/[0.02] border border-white/5">
        <div class="w-8 h-8 mx-auto mb-3 rounded-full bg-emerald-glow/10 text-emerald-glow font-bold text-sm flex items-center justify-center">1</div>
        <p class="text-sm text-gray-400">Abre Minecraft Java Edition</p>
      </div>
      <div class="p-6 rounded-xl bg-white/[0.02] border border-white/5">
        <div class="w-8 h-8 mx-auto mb-3 rounded-full bg-emerald-glow/10 text-emerald-glow font-bold text-sm flex items-center justify-center">2</div>
        <p class="text-sm text-gray-400">Multijugador > Agregar servidor</p>
      </div>
      <div class="p-6 rounded-xl bg-white/[0.02] border border-white/5">
        <div class="w-8 h-8 mx-auto mb-3 rounded-full bg-emerald-glow/10 text-emerald-glow font-bold text-sm flex items-center justify-center">3</div>
        <p class="text-sm text-gray-400">Conectate y juega</p>
      </div>
    </div>

    <!-- CTA buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <button
        id="final-copy-btn"
        class="group inline-flex items-center gap-3 px-6 py-3 bg-white text-obsidian font-semibold rounded-xl hover:bg-gray-100 transition-colors"
      >
        <span class="font-mono">{serverIp}</span>
        <svg id="final-copy-icon" class="w-4 h-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        <svg id="final-check-icon" class="w-4 h-4 text-emerald-600 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </button>

      <a
        href={discordInvite}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 border border-white/10 text-gray-300 rounded-xl hover:bg-white/5 hover:border-white/20 transition-all"
      >
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
        </svg>
        <span>Discord</span>
      </a>
    </div>
  </div>
</section>

<script define:vars={{ serverIp }}>
  const copyBtn = document.getElementById('final-copy-btn');
  const copyIcon = document.getElementById('final-copy-icon');
  const checkIcon = document.getElementById('final-check-icon');

  copyBtn?.addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText(serverIp);
      copyIcon?.classList.add('hidden');
      checkIcon?.classList.remove('hidden');

      setTimeout(() => {
        copyIcon?.classList.remove('hidden');
        checkIcon?.classList.add('hidden');
      }, 2000);
    } catch (err) {
      console.error('Failed to copy:', err);
    }
  });
</script>

---
// @version 1.0.0
// Navigation bar component with glassmorphism effect
const discordInvite = import.meta.env.PUBLIC_DISCORD_INVITE || "https://discord.gg/KdcrCBjM";
---

<nav id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="#" class="flex items-center gap-3 group">
        <img
          src="/logo.svg"
          alt="GrassRealms"
          class="w-10 h-10 transition-transform group-hover:scale-110"
        />
        <span class="font-minecraft text-lg bg-gradient-to-r from-emerald-glow to-diamond-blue bg-clip-text text-transparent hidden sm:block">
          GrassRealms
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#features" class="nav-link text-gray-300 hover:text-emerald-glow transition-colors">
          Caracteristicas
        </a>
        <a href="#server" class="nav-link text-gray-300 hover:text-emerald-glow transition-colors">
          El Servidor
        </a>
        <a href="#community" class="nav-link text-gray-300 hover:text-emerald-glow transition-colors">
          Comunidad
        </a>
        <a
          href={discordInvite}
          target="_blank"
          rel="noopener noreferrer"
          class="px-4 py-2 bg-gradient-to-r from-emerald-glow to-diamond-blue text-obsidian font-semibold rounded-lg hover:opacity-90 transition-opacity"
        >
          Jugar Ahora
        </a>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-300 hover:text-white">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden glass">
    <div class="px-4 py-3 space-y-3">
      <a href="#features" class="block text-gray-300 hover:text-emerald-glow transition-colors">
        Caracteristicas
      </a>
      <a href="#server" class="block text-gray-300 hover:text-emerald-glow transition-colors">
        El Servidor
      </a>
      <a href="#community" class="block text-gray-300 hover:text-emerald-glow transition-colors">
        Comunidad
      </a>
      <a
        href={discordInvite}
        target="_blank"
        rel="noopener noreferrer"
        class="block px-4 py-2 bg-gradient-to-r from-emerald-glow to-diamond-blue text-obsidian font-semibold rounded-lg text-center"
      >
        Jugar Ahora
      </a>
    </div>
  </div>
</nav>

<script>
  // Navbar scroll effect
  const navbar = document.getElementById('navbar');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar?.classList.add('glass', 'shadow-lg');
    } else {
      navbar?.classList.remove('glass', 'shadow-lg');
    }
  });

  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
